            $.iMessager.alert('自定义方法', '自定义方法被执行了！', 'messager-info');

            var checkedRows = $('#productDg').iDatagrid('getChecked');
            console.log(checkedRows);

            var selectedRow = $('#productDg').iDatagrid('getSelected');
            console.log(selectedRow);

            // 提交参数查询表格数据
