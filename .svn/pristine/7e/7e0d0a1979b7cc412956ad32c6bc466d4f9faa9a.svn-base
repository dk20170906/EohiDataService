        //日期转换
        function dateConversion(value, row, index) {
            var data = row.create_time;
            if (data != null && data != "") {
                //取字符串中的数字
                var regexp = /[0-9]*/g;
                var time = data.match(regexp)
                //实现将时间戳转换为日期 （东8区）
                var date = new Date(parseInt(time[6]));
                Y = date.getFullYear() + '-';
                M = (date.getMonth() + 1 < 10 ? '0' + (date.getMonth() + 1) : date.getMonth() + 1) + '-';
                D = date.getDate() + ' ';
                h = date.getHours() + ':';
                m = date.getMinutes() + ':';
                s = date.getSeconds();
                return Y + M + D + h + m + s;
            }
            else {
                return "无";
            }
        }


        

