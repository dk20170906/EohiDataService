<script type="text/javascript">
    var tejs = document.getElementById("flowscriptswitchitem");
    window.editorjs_process_flowscriptswitchitem = CodeMirror.fromTextArea(tejs, {
        mode: "python",
        theme: "night",
        lineNumbers: true,
        lineWrapping: true,
        indentUnit: 4,
        indentWithTabs: true,
        extraKeys: { "Ctrl-Q": function (cm) { cm.foldCode(cm.getCursor()); } },
        foldGutter: true,
        gutters: ["CodeMirror-linenumbers", "CodeMirror-foldgutter"]
    });
</script>

<script type="text/javascript">
    var tejs = document.getElementById("switchscript");
    window.editorjs_process_switchscript  = CodeMirror.fromTextArea(tejs, {
        mode: "python",
        theme: "night",
        lineNumbers: true,
        lineWrapping: true,
        indentUnit: 4,
        indentWithTabs: true,
        extraKeys: { "Ctrl-Q": function (cm) { cm.foldCode(cm.getCursor()); } },
        foldGutter: true,
        gutters: ["CodeMirror-linenumbers", "CodeMirror-foldgutter"]
    });

</script>

<script type="text/javascript">
    var nodeid = "";
    var nodedata = undefined;
    $(function () {
        //获取nodeid 对应的数据信息;
        nodeid = getNodeid();
        //var temp = $("#" + nodeid, parent);
        //$('#label').textbox('setValue', parent.$("#" + nodeid).attr("data-label"));

        //if (parent.node_attr_data != undefined) {
        //    nodedata = parent.node_attr_data[nodeid];
        //}


        //判断是否存在节点数据;
        if (parent.node_attr_data[nodeid] == undefined) {
            parent.node_attr_data[nodeid] = {};
            parent.node_attr_data[nodeid].nodeid = nodeid;
            parent.node_attr_data[nodeid].label = parent.$("#" + nodeid).attr("data-label");
            parent.node_attr_data[nodeid].remark = "";

        }

        //
        nodedata = parent.node_attr_data[nodeid];

        //
        $('#label').textbox('setValue', nodedata.label);
        $('#remark').textbox('setValue', nodedata.remark);

        if (nodedata.switchscript == undefined)
            nodedata.switchscript = "";
        if (nodedata.flowscript == undefined)
            nodedata.flowscript = "";

        window.editorjs_process_switchscript.setValue(nodedata.switchscript);
        window.editorjs_process_switchscript.refresh();
        window.editorjs_process_flowscriptswitchitem.setValue(nodedata.flowscript);
        window.editorjs_process_flowscriptswitchitem.refresh();
        initGrid();
    });
    function getNodeid() {
        //
        return GetRequest()["nodeid"];
    }

    function GetRequest() {
        var url = location.search; //获取url中"?"符后的字串
        var theRequest = new Object();
        if (url.indexOf("?") != -1) {
            var str = url.substr(1);
            strs = str.split("&");
            for (var i = 0; i < strs.length; i++) {
                theRequest[strs[i].split("=")[0]] = unescape(strs[i].split("=")[1]);
            }
        }
        return theRequest;
    }


    function initGrid() {
        if (nodedata.switchitems == undefined)
            nodedata.switchitems = [];

        $("#switchItemsGrid").iDatagrid({
            id: 'switchItemsGrid',
            //idField : 'itemid',
            columns: [[
                { field: 'switchid', title: 'ID', sortable: true },
                { field: 'switchname', title: '操作名称', sortable: true },
                { field: 'switchnote', title: '描述', sortable: true },
                { field: 'operate', title: '操作', sortable: true, formatter: operateFormatter, width: 230 }
            ]],
            data: nodedata.switchitems
        });
    }
    function operateFormatter(value, row, index) {
        htmlstr = '<button class="layui-btn layui-btn-xs" id="test" onclick="openEditDiag_item(' + index + ')">编辑</button>';
        htmlstr += '<button class="layui-btn layui-btn-xs layui-btn-danger" onclick="delete_item(' + index + ')">删除</button>';

        return htmlstr;
    }


    function dataSave() {

        var bsaved = false;

        //保存节点标示
        nodedata.label = $('#label').textbox('getValue');
        nodedata.remark = $('#remark').textbox('getValue');
        // 路由计算脚本
        nodedata.switchscript = window.editorjs_process_switchscript.getValue();

        nodedata.flowscript = window.editorjs_process_flowscriptswitchitem.getValue();
           

        //元素显示更改；
        parent.$("#" + nodeid).attr("data-label", nodedata.label);
        parent.$("#" + nodeid + " .switch-i").html(nodedata.label);


        return true;
    }


    //删除
    function delete_item(rowIndex) {
        $.messager.confirm('提示框', '是否确定删除当前数据?', function (data) {
            if (data) {
                $('#switchItemsGrid').iDatagrid('deleteRow', rowIndex);
            }
        });
    }

    //打开修改对话框
    function openEditDiag_item(rowIndex) {
        var opts = {
            id: 'editDialog',
            title: '编辑数据',
            width: 800,
            height: 500,
            closed: false,
            cache: false,
            href: _ctx + '/html/workflow/switchitem_edit.html',
            modal: true,
            buttons: [{
                text: '保存',
                iconCls: 'fa fa-save',
                btnCls: 'topjui-btn-blue',
                handler: function (data) {
                    //加入表格;
                    $('#switchItemsGrid').iDatagrid('updateRow', {
                        index: rowIndex,
                        row: {
                            switchname: $("#switchname").val(),
                            switchnote: $("#switchnote").val()
                        }
                    });

                    $('#editDialog').iDialog('close');

                }
            }, {
                text: '关闭',
                iconCls: 'fa fa-close',
                btnCls: 'topjui-btn-red',
                handler: function () {
                    $('#editDialog').iDialog('close');
                    //window.location.reload();
                }
            }],
            onLoad: function () {
                //itemid
                var row = $('#switchItemsGrid').datagrid('getData').rows[rowIndex];
                //读取;
                $('#switchname').iTextbox('setValue', row.switchname);
                $('#switchnote').iTextbox('setValue', row.switchnote);

            }
        };
        $('#editDialog').iDialog('openDialog', opts);
    }


    //新建;
    $("#add").iMenubutton({
        method: 'openDialog',
        extend: '#switchItemsGrid-toolbar',
        iconCls: 'fa fa-plus',
        btnCls: 'topjui-btn-green',
        dialog: {
            id: 'addDialog',
            title: '新增',
            width: 800,
            height: 500,
            href: _ctx + '/html/workflow/switchitem_edit.html',
            buttonsGroup: [
                {
                    text: '保存',
                    btnCls: 'topjui-btn-brown',
                    iconCls: 'fa fa-plus',
                    handler: function () {
                        //加入表格;
                        $('#switchItemsGrid').iDatagrid('appendRow', {
                            switchid: NewGuid(),
                            switchname: $("#switchname").val(),
                            switchnote: $("#switchnote").val()

                        });

                        $('#addDialog').iDialog('close');
                    }
                }
            ],
            onLoad: function () {
            }
        }
    });

    function S4() {
        return (((1 + Math.random()) * 0x10000) | 0).toString(16).substring(1);
    }
    function NewGuid() {
        return (S4() + S4() + "-" + S4() + "-" + S4() + "-" + S4() + "-" + S4() + S4() + S4());
    }

</script>

