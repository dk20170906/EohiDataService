@{
    Layout = null;
}

@*<!--Head Ends-->
<!--Body-->
<body>
    <div class="login-container animated fadeInDown">
        <form id="login" name="login" action="@Url.Action("Login","Login",new {area="Admin"})" method="post" >
            <div class="loginbox bg-white" style="height: 500px !important;">
                <div class="loginbox-title">数据后台</div>
                <div class="loginbox-social">
                    <div class="social-title ">用户登录</div>
                
                </div>
                <div class="loginbox-or">
                    <div class="or-line"></div>
                    <div class="or">登录</div>
                </div>
                
                @if(!string.IsNullOrEmpty(ViewBag.err))
                    {
                      
                    <div class="loginbox-textbox">
                        <div class="alert alert-danger fade in">
                        <button class="close" data-dismiss="alert">
                            ×
                        </button>
                        <i class="fa-fw fa fa-times"></i>
                        <strong>错误!</strong>@ViewBag.errmsg
                    </div>
                    </div>
                }
                

                <div class="loginbox-textbox">
                    <input type="text" class="form-control" id="accountname" name="user_id" placeholder="账号" required="required"/>
                </div>
                <div class="loginbox-textbox">
                    <input type="password" class="form-control" id="psw" name="user_password" placeholder="密码" required="required" />
                </div>
                <input name="ReturnUrl" value="@ViewBag.ReturnUrl" hidden="hidden"/>
                <div class="loginbox-textbox">
                    <input type="text" class="form-control" id="code" name="code" placeholder="验证码" required="required"/>
                </div>
                <div class="loginbox-textbox">
                    <img id="imgVerifyCode" onclick="refreshCode()"  src="@Url.Content("~/ValidateCode/Get?id=1")" height="50px" width="100px"/>
                </div>
                <div class="loginbox-forgot">
                    <a href="#" onclick="query()">忘记密码?</a>
                </div>
                <div class="loginbox-submit">
                    <input type="submit" class="btn btn-primary btn-block" value="登录" onclick="document.login.submit()" />
                </div>
            
            </div>
        </form>
        <div class="logobox">
        </div>
    </div>

    <!--Basic Scripts-->
     <script src="@Url.Content("~/assets/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/assets/js/beyond.min.js")"></script>
    <!--Tips Support-->
    <script src="@Url.Content("~/assets/js/bootbox/bootbox.js")"></script>
    <script src="@Url.Content("~/assets/js/toastr/toastr.js")"></script>
</body>
<!--Body Ends-->*@






<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>登录</title>
	<meta name="renderer" content="webkit">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="format-detection" content="telephone=no">
	<link rel="stylesheet" href="@Url.Content("~/Scripts/layui/css/layui.css")" media="all" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/layui/css/login.css")" media="all" />
</head>
<body>
	
	<div class="video_mask"></div>
	<div class="login">
	    <h1>API-管理登录</h1>
         @if(!string.IsNullOrEmpty(ViewBag.err))
         {
               <blockquote class="layui-elem-quote">@ViewBag.errmsg
               </blockquote>
         }
                
      

	    <form class="layui-form"  action="@Url.Action("Login","Login",new {area="Admin"})" method="post" >
	    	<div class="layui-form-item">
				<input class="layui-input" id="accountname" name="user_id" placeholder="用户名" lay-verify="required" type="text" autocomplete="off">
		    </div>
		    <div class="layui-form-item">
				<input class="layui-input" id="psw" name="user_password"  placeholder="密码" lay-verify="required" type="password" autocomplete="off">
		    </div>
		    <div class="layui-form-item form_code">
				<input class="layui-input" name="code" placeholder="验证码" lay-verify="required" type="text" autocomplete="off">
				<div class="code"><img id="imgVerifyCode"  src="@Url.Content("~/ValidateCode/Get?id=1")" width="116" height="36"></div>
		    </div>
			<button class="layui-btn login_btn" lay-submit="" lay-filter="login">登录</button>
		</form>
	</div>
	<script type="text/javascript" src="@Url.Content("~/Scripts/layui/layui.js")"></script>
</body>
</html>

 <script type="text/javascript">

     layui.config({
         base: "js/"
     }).use(['form', 'layer'], function () {
         var form = layui.form,
             layer = parent.layer === undefined ? layui.layer : parent.layer,
             $ = layui.jquery;
         //video背景
         $(window).resize(function () {
             if ($(".video-player").width() > $(window).width()) {
                 $(".video-player").css({ "height": $(window).height(), "width": "auto", "left": -($(".video-player").width() - $(window).width()) / 2 });
             } else {
                 $(".video-player").css({ "width": $(window).width(), "height": "auto", "left": -($(".video-player").width() - $(window).width()) / 2 });
             }
         }).resize();

         //登录按钮事件
         form.on("submit(login)", function (data) {
             //window.location.href = "../../index.html";
             return true;
         })

         //刷新验证码
         $("#imgVerifyCode").on("click", function () {
             $("#imgVerifyCode").attr("src", $("#imgVerifyCode").attr("src") + 1);  //id=2
         })
     })

  </script>

